<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_small"
        android:layout_marginRight="@dimen/global_padding_small"
        android:layout_marginTop="@dimen/global_padding_small">

        <ImageView
            android:id="@+id/item_icon_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_white"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding_mid2"
            android:layout_marginTop="@dimen/global_padding_small"
            android:layout_toRightOf="@+id/item_icon_iv"
            android:text="名称"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name_tv"
            android:layout_marginLeft="@dimen/global_padding_mid2"
            android:layout_marginTop="@dimen/global_padding_little"
            android:layout_toRightOf="@+id/item_icon_iv"
            android:text="介绍"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_content_tv"
            android:layout_marginLeft="@dimen/global_padding_mid2"
            android:layout_marginTop="@dimen/global_padding_little"
            android:layout_toRightOf="@+id/item_icon_iv"
            android:text="介绍"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_line_size"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="@dimen/global_padding_small"
        android:layout_marginTop="@dimen/global_padding_small"
        android:background="@color/line_color" />

</LinearLayout>