<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_is_empty_ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dip"
    android:layout_below="@+id/navigation_layout"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/list_null_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ico_bq" />

        <com.tourism.app.widget.view.CustomTextView
            android:id="@+id/list_null_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还没有攻略"
            android:textColor="#ADAEAE"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

</LinearLayout>