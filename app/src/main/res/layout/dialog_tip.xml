<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding_small"
        android:background="@drawable/bg_white_round"
        android:minWidth="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding_mid2"
            android:gravity="center"
            android:padding="@dimen/global_padding_small"
            android:text="恭喜！您已经预约成功"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/dialog_content_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding_mid2"
            android:layout_marginTop="@dimen/global_padding_mid"
            android:padding="@dimen/global_padding_small"
            android:text="详情请到我的订单查询"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tourism.app.widget.view.CustomButton
                android:id="@+id/dialog_left_btn"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tip_left_round"
                android:onClick="onClick"
                android:text="取消"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16" />

            <com.tourism.app.widget.view.CustomButton
                android:id="@+id/dialog_right_btn"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tip_right_round"
                android:onClick="onClick"
                android:text="确定"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>