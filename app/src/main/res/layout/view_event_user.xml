<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#F5F5F5" >

    <TextView
        android:id="@+id/user_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding_mid"
        android:layout_marginTop="@dimen/global_padding_mid"
        android:gravity="center"
        android:singleLine="true"
        android:text="向导服务||向导服务||向导服务"
        android:textColor="@color/text_black"
        android:textSize="8sp" />

    <LinearLayout
        android:id="@+id/user_icon_ll"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@+id/user_tag_tv"
        android:layout_marginLeft="@dimen/global_padding_mid"
        android:layout_marginTop="@dimen/global_padding_little"
        android:background="@drawable/bg_circle_white"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/user_icon_iv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_vip_tv"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@+id/user_icon_ll"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="@dimen/global_padding_little"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:singleLine="true"
        android:text="V友"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_tag_tv"
        android:layout_marginLeft="@dimen/global_padding_mid"
        android:layout_marginTop="@dimen/global_padding_mid"
        android:layout_toRightOf="@+id/user_icon_ll"
        android:gravity="center"
        android:singleLine="true"
        android:text="乌鸦"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/user_alias_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_tag_tv"
        android:layout_marginLeft="@dimen/global_padding_mid"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/user_name_tv"
        android:background="@drawable/bg_red_round"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:text="资讯达人"
        android:textColor="@color/text_black"
        android:textSize="6sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_alias_tv"
        android:layout_marginLeft="@dimen/global_padding_little"
        android:layout_marginTop="@dimen/global_padding_mid2"
        android:layout_toRightOf="@+id/user_icon_ll"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/global_line_size"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/global_padding_little"
            android:layout_marginRight="@dimen/global_padding_little"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/user_id_auth_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_is_auth" />

            <TextView
                android:id="@+id/user_id_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_id_auth_iv"
                android:gravity="center"
                android:text="身份ID"
                android:textColor="@color/text_black"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/user_id_is_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_id_auth_tv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_id_auth_iv"
                android:gravity="center"
                android:text="已认证"
                android:textColor="@color/text_gray"
                android:textSize="6sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/global_line_size"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/global_padding_little"
            android:layout_marginRight="@dimen/global_padding_little"
            android:background="@color/line_color"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/user_email_auth_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_is_auth" />

            <TextView
                android:id="@+id/user_email_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_email_auth_iv"
                android:gravity="center"
                android:text="邮箱"
                android:textColor="@color/text_black"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/user_email_is_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_email_auth_tv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_email_auth_iv"
                android:gravity="center"
                android:text="已认证"
                android:textColor="@color/text_gray"
                android:textSize="6sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/global_line_size"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/global_padding_little"
            android:layout_marginRight="@dimen/global_padding_little"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/user_phone_auth_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_is_auth" />

            <TextView
                android:id="@+id/user_phone_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_phone_auth_iv"
                android:gravity="center"
                android:text="手机"
                android:textColor="@color/text_black"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/user_phone_is_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone_auth_tv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/user_phone_auth_iv"
                android:gravity="center"
                android:text="已认证"
                android:textColor="@color/text_gray"
                android:textSize="6sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/global_line_size"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/global_padding_little"
            android:layout_marginRight="@dimen/global_padding_little"
            android:background="@color/line_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/make_rl"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/global_padding_mid"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_gray"
        android:paddingLeft="@dimen/global_padding_small" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="￥"
            android:textColor="@color/text_red"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/event_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="100/人"
            android:layout_marginLeft="7dp"
            android:textColor="@color/text_red"
            android:textSize="@dimen/sp_11" />
        
        <com.tourism.app.widget.view.CustomButton
        	android:id="@+id/user_pay_btn"
        	android:layout_width="57dp"
        	android:layout_height="13dp"
        	android:text="订阅"
        	android:textColor="@color/text_white"
        	android:onClick="onClick"
        	android:background="@color/text_red"
        	android:textSize="8sp"
        	android:layout_alignParentBottom="true"
        	android:layout_marginBottom="5dp"
        />
    </RelativeLayout>

</RelativeLayout>