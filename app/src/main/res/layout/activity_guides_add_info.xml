<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF0F5"
    android:orientation="vertical">

    <include layout="@layout/view_navigation_guides" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_line_size"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:background="@color/text_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tourism.app.widget.view.CustomImageButton
            android:id="@+id/foot_bar_noted_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:onClick="onClick"
            android:src="@drawable/btn_jl" />

        <com.tourism.app.widget.view.CustomImageButton
            android:id="@+id/foot_bar_camera_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/btn_xq"
            android:textColor="@color/text_white"
            android:onClick="onClick"
            android:textSize="@dimen/sp_14" />

        <com.tourism.app.widget.view.CustomImageButton
            android:id="@+id/foot_bar_location_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:onClick="onClick"
            android:src="@drawable/btn_wz"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>