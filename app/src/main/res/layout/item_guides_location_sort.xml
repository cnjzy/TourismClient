<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@color/text_white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_title_ll"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_title_date_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_title_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding_small"
            android:text="2016.05.20"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#EBF0F5" >

        <ImageView
            android:id="@+id/item_icon_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/global_padding_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_padding_small"
            android:scaleType="fitXY"
            android:src="@drawable/ico_jd" />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_icon_iv"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="死定了"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
        
        <ImageView
            android:id="@+id/item_touch_iv"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/ico_tb" />
    </RelativeLayout>

</LinearLayout>