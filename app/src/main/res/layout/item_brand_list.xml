<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_left_layout"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginLeft="@dimen/global_padding_small"
        android:layout_marginRight="@dimen/global_padding_little"
        android:layout_marginTop="@dimen/global_padding_little"
        android:layout_weight="1"
        android:background="@color/background" >

        <ImageView
            android:id="@+id/item_left_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_left_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_padding_small"
            android:text="奥迪"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right_layout"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginRight="@dimen/global_padding_small"
        android:layout_marginTop="@dimen/global_padding_little"
        android:layout_weight="1"
        android:background="@color/background" >

        <ImageView
            android:id="@+id/item_right_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_right_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_padding_small"
            android:text="奥迪"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>