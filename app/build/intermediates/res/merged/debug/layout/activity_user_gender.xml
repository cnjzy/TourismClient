<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/view_navigation" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_line_size"
        android:layout_marginTop="@dimen/global_padding_mid2"
        android:background="@color/line_color" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/gender_male_rb"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/radio_user_gender"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/global_padding_mid"
            android:paddingRight="@dimen/global_padding_mid"
            android:text="男"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/global_line_size"
            android:layout_marginLeft="@dimen/global_padding_mid"
            android:background="@color/line_color" />

        <RadioButton
            android:id="@+id/gender_female_rb"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_user_gender"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/global_padding_mid"
            android:paddingRight="@dimen/global_padding_mid"
            android:text="女"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
    </RadioGroup>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_line_size"
        android:background="@color/line_color" />

</LinearLayout>