<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_user"
    android:orientation="vertical"
    android:padding="@dimen/global_padding_small" >

    <ImageView
        android:id="@+id/item_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/global_padding_small"
        android:scaleType="fitXY"
        android:src="@drawable/ico_jd" />

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_icon_iv"
        android:singleLine="true"
        android:text="死定了"
        android:textColor="@color/text_black"
        android:layout_marginTop="@dimen/global_padding_little"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_des_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_icon_iv"
        android:singleLine="true"
        android:text="Just go"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_11" />

</RelativeLayout>